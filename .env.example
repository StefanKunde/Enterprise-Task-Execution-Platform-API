# Application Configuration
NODE_ENV=development
PORT=3000

# Database
MONGO_URI=mongodb://localhost:27017/task-execution-platform

# JWT Authentication
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-refresh-secret-here
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Email Service (Brevo SMTP)
MAIL_HOST=smtp.brevo.com
MAIL_PORT=587
MAIL_USER=your-email@example.com
MAIL_PASSWORD=your-smtp-password
MAIL_FROM=noreply@taskplatform.com

# OAuth2 - Discord (Optional)
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_CALLBACK_URL=http://localhost:3000/auth/discord/callback
DISCORD_GUILD_ID=

# Payment Processing - NowPayments (Optional)
NOWPAYMENTS_API_KEY=
NOWPAYMENTS_IPN_SECRET=
NOWPAYMENTS_API_URL=https://api.nowpayments.io/v1

# Notifications - Telegram (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_URL=

# Security & API
EXECUTOR_API_TOKEN=your-executor-api-token-here
CORS_ORIGIN=http://localhost:4200

# System Configuration
MAX_EXECUTOR_RUNTIME_IN_MIN=180
FRONTEND_URL=http://localhost:4200

# Redis (for Bull Queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

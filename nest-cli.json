{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "mail/templates/**/*",
        "outDir": "dist"
      },
      {
        "include": "mail/templates/assets/**/*",
        "outDir": "dist"
      },
      {
        "include": "dispatcher/protos/*.proto",
        "outDir": "dist"
      }
    ],

    "watchAssets": true
  }
}
